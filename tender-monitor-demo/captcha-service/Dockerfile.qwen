# Dockerfile for Qwen2-VL Captcha Service
FROM nvidia/cuda:12.1.0-runtime-ubuntu22.04

# 设置工作目录
WORKDIR /app

# 安装 Python 和基础依赖
RUN apt-get update && apt-get install -y \
    python3.10 \
    python3-pip \
    git \
    wget \
    && rm -rf /var/lib/apt/lists/*

# 复制依赖文件
COPY requirements_qwen.txt .

# 安装 Python 依赖
RUN pip3 install --no-cache-dir -r requirements_qwen.txt

# 复制服务文件
COPY qwen_captcha_service.py .

# 设置环境变量
ENV QWEN_MODEL=Qwen/Qwen2-VL-2B-Instruct
ENV USE_GPU=true
ENV MAX_PIXELS=360000
ENV MIN_PIXELS=64000
ENV PYTHONUNBUFFERED=1

# 暴露端口
EXPOSE 5000

# 健康检查
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD python3 -c "import requests; requests.get('http://localhost:5000/health')"

# 启动服务
CMD ["python3", "qwen_captcha_service.py"]
